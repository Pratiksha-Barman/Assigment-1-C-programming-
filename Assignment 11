//Write a program to calculate sum of first N natural numbers
#include<stdio.h>
void main()
{
    int N,sum=0,i;
    printf("Enter the value of N \n");
    scanf("%d",&N);
    for(i=1;i<=N;i++)
    {
        sum=sum+i;
    }
    printf("The sum of first %d natural numbers is %d ",N,sum);
}

