//Write a program to print size of an int, a float, a char and a double type variable
#include <stdio.h>
int main() 
{
  printf("The size of int is %d \n",sizeof(int));
  printf("The size of float is %d \n",sizeof(float)); 
  printf("The size of char is %d \n",sizeof(char)); 
  printf("The size of double is %d \n",sizeof(double)); 
  return 0;
}

//Write a program to find last digit of a given number
#include <stdio.h>
int main() 
{
  int num, Ldigit;
  printf("Enter a number \n");
  scanf("%d",&num);
  Ldigit = num % 10;
  printf("The last digit of %d is %d \n",num,Ldigit);
  return 0;
}

//Write a program to find first digit of a given three digit number
#include <stdio.h>
int main()
{
int num, firstDigit, lastDigit;
printf("Enter a number\n");
scanf("%d", &num);
firstDigit = num;
    while (firstDigit >= 10)
    {
    firstDigit = firstDigit / 10;
    }
printf("First digit of the entered number is %d \n", firstDigit);
return 0;
}

//Write a program to find middle digit of a given three digit number
#include<stdio.h>
void main()
{
  int a,b,c;
  printf("Enter a Three Digit Number\n");
  scanf("%d" ,&a);
  b = (a/10) % 10;
  printf("Middle digit is %d",b);
}

//Write a program to swap values of two int variables
#include <stdio.h>
int main()
{
    int a,b,c;
    printf("Enter the values of the two variables \n");
    scanf("%d %d",&a, &b);
    c=a;
    a=b;
    b=c;
    printf("The swap values of the two int variables are a=%d and b=%d",a,b);
    return 0;
}

//Write a program to swap values of two int variables without using third variable
#include <stdio.h>
int main()
{
    int a,b;
    printf("Enter the values of the two variables a and b \n");
    scanf("%d %d",&a, &b);
    a=a+b;
    b=a-b;
    a=a-b;
    printf("The swap values of the two int variables are a=%d and b=%d",a,b);
    return 0;
}


